---
import MdiCalendarMonthOutline from '~icons/mdi/calendar-month-outline'
const { title, url, date, description } = Astro.props
---
<div class="mb-2">
    <h1><a href={url} class="text-2xl text-solo-tangerine">{title}</a></h1>
    <div class="flex items-center me-2"><MdiCalendarMonthOutline /> {date}</div>
    <div>{description}</div>
</div>